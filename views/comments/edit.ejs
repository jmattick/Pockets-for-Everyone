

<% include ../partials/header %>

    <div class = "row">
        <h1 style = "text-align: center;">Edit Comment</h1>
            <div class = "mob-form" style = "width: 30%; margin: 30px auto;">
               
                    <form action = "/vendors/<%=vendorid%>/comments/<%=comment._id%>?_method=PUT" method = "POST">
